# vim:set ft=sh sw=2 ts=2 expandtab:

alias web="cd ~/Sites"
alias dcc="echo 'CLEAR ALL THE CACHES!' && drush cc all"
alias dcron="echo 'Cronolizing...' && drush cron"
alias ddl="drush dl"
alias den="drush en"
alias dis="drush dis"
alias dun="drush pm-uninstall"
alias hr="sudo apachectl restart"
alias hg="sudo apachectl graceful"
alias flush="dscacheutil -flushcache && echo 'DNS flushed yo'"
alias hosts="sudo vim /etc/hosts"
alias lipsum="pbcopy < ~/lib/lipsum-text && echo 'Dummy text assimilated to clipboard'"
